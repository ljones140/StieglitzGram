- if @photos.any?
  - @photos.each do |photo|
    %section
      = image_tag photo.image.url(:medium)
      %p
        added by:
        %strong
          = photo.user.email
        = photo.title
        - if photo.comments.any?
          %ul
            - photo.comments.each do |comment|
              %li
                Comment by:
                = comment.user.email
                = comment.comment
        = link_to "Comment #{photo.title}", new_photo_comment_path(photo)
- else
  %h1 No photos yet

= link_to "Add a photo", new_photo_path
